#       MacOS Aliases
# ############################## #

if [[ "$OSTYPE" == "darwin"* ]]; then
    function take() {
        mkdir -p $1
        cd $1
    }

    function o() {
        if [ $# -eq 0 ]; then
            open .
        else
            open "$@"
        fi
    }
fi

